{
    "manifest_version": 3,
    "name": "Vip box covering",
    "version": "1.3",
    "description": "Ajout de checkbox suivit client pour vince",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "http://pr.vip-box.fr/prestations.php",
                "https://pr.vip-box.fr/prestations.php"
            ]
        }
    ]
}